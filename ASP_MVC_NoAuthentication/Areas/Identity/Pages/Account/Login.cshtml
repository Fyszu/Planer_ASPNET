@page
@model ASP_MVC_NoAuthentication.Views.Home.LoginModel
@{
}

<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title>Modern Flat Design Login Form Example</title>
  <link rel="stylesheet" href="~/css/style.css">

</head>
<body>
<!-- partial:index.partial.html -->
<div class="login-page">
  <div class="form">
    <form class="register-form" asp-route-returnUrl="@Model.ReturnUrl" method="post" asp-page-handler="Register">
      <div class="form-group">
                <span asp-validation-for="InputRegister.EmailRegister" class="text-danger"></span>
                <label asp-for="InputRegister.EmailRegister"></label>
                <input asp-for="InputRegister.EmailRegister" class="form-control" />
            </div>
            <div class="form-group">
                <span asp-validation-for="InputRegister.PasswordRegister" class="text-danger"></span>
                <label asp-for="InputRegister.PasswordRegister"></label>
                <input asp-for="InputRegister.PasswordRegister" class="form-control" />
            </div>
            <div class="form-group">
                <span asp-validation-for="InputRegister.ConfirmPasswordRegister" class="text-danger"></span>
                <label asp-for="InputRegister.ConfirmPasswordRegister"></label>
                <input asp-for="InputRegister.ConfirmPasswordRegister" class="form-control" />
            </div>
      <button type = "submit" class="btn btn-success form-control">register</button>
      <p class="message">Already registered? <a href="#">Sign In</a></p>
    </form>
    <form class="login-form" asp-route-returnUrl="@Model.ReturnUrl" method="post" asp-page-handler="Login">
      <div class="form-group">
                    <span asp-validation-for="InputLogin.EmailLogin" class="text-danger"></span>
                    <label asp-for="InputLogin.EmailLogin"></label>
                    <input asp-for="InputLogin.EmailLogin" class="form-control" />
                </div>
                <div class="form-group">
                    <span asp-validation-for="InputLogin.PasswordLogin" class="text-danger"></span>
                    <label asp-for="InputLogin.PasswordLogin"></label>
                    <input asp-for="InputLogin.PasswordLogin" class="form-control" />
                </div>
                <div class="form-group">
                            <input type="checkbox" asp-for="InputLogin.RememberMe" id="rememberMe" />
                            <label for="rememberMe">Zapamiętaj mnie</label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
      <p class="message">Not registered? <a href="#">Create an account</a></p>
    </form>
  </div>
</div>
<!-- partial -->
  <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script><script  src="~/js/script.js"></script>

</body>
</html>

@section Scripts {  
    <partial name="_ValidationScriptsPartial" />  
} 